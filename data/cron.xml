<odoo>
  <data noupdate="1">
    <record id="cron_reactivate_departments_once" model="ir.cron">
      <field name="name">Re-activate Departments (one-shot)</field>
      <field name="model_id" ref="hr.model_hr_department"/>
      <field name="state">code</field>
      <field name="code">
icp = model.env['ir.config_parameter'].sudo()
if not icp.get_param('rosefilm.departments_reactivated'):
    model.with_context(active_test=False).search([('active','=',False)]).write({'active': True})
    icp.set_param('rosefilm.departments_reactivated', '1')
      </field>
      <field name="numbercall">1</field>              <!-- run once -->
      <field name="interval_number">1</field>
      <field name="interval_type">minutes</field>
      <field name="active">True</field>
    </record>
  </data>
</odoo>
